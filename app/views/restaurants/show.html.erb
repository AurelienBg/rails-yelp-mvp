<h1>Restaurant of your choice</h1>
<h2><%= @restaurant.name %></h2>
<p><%= @restaurant.address %></p>

<div class="list-inline">
  <li> <%= link_to "All", restaurants_path, class: "btn btn-primary" %></li>
  <li> <%= link_to "Edit", edit_restaurant_path(@restaurant), class: "btn btn-success" %></li>
  <li> <%= link_to "Delete", restaurant_path(@restaurant), method: :delete, class: "btn btn-danger" %></li>
</div>

<h3>See all reviews</h3>
<ul>
  <% @restaurant.reviews.each do |review| %>
    <li> <%= review.content %> (<%= review.rating %>) </li>
  <% end %>
</ul>

<h1>Add a new review</h1>

<%= simple_form_for([@restaurant, @review]) do |f| %>
  <%= f.input :content, input_html: {class:"my_input_class", id:'js-input'}, label_html:{class:"my_label_class"}, wrapper_html:{class:"my_wrapper_class"} %>
  <%= f.input :rating %>
  <%= f.submit %>
<% end %>
